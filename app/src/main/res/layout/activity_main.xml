<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profils"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="26dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/account"
        />

    <ImageView
        android:id="@+id/burger_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="26dp"
        android:src="@drawable/burger_menu"/>

    <TextView
        android:id="@+id/rent_a_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="90dp"
        android:text="Rent a car"
        android:textSize="36sp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/search"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="198dp"
        android:background="@drawable/edit_text_rounder"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="12dp"
        android:hint="Search"
        android:padding="12dp"
        android:textColor="@color/grey"
        android:textSize="22dp"
        android:textStyle="bold" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/search"
        android:layout_marginTop="83dp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/blue_rectengle"
            android:layout_width="360dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="@color/blue"
            android:layout_gravity="center_horizontal|top"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/blue">

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="88dp"
                android:layout_height="27dp"
                android:text="Bogamy"
                android:layout_marginLeft="40dp"
                android:textSize="22dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="27dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:layout_width="138dp"
            android:layout_height="102dp"
            android:layout_marginLeft="345dp"
            android:src="@drawable/ic_bicycle"
            android:elevation="1dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="end|top" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/blue_rectengle2"
            android:layout_width="360dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="@color/pink"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/blue">

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="88dp"
                android:layout_height="27dp"
                android:text="Bogamy"
                android:layout_marginLeft="40dp"
                android:textSize="22dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="27dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group2"
            android:elevation="1dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="end|center" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/blue_rectengl1"
            android:layout_width="360dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="@color/green"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom|center_horizontal"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/blue">

            <ImageView
                android:id="@+id/arroww1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="88dp"
                android:layout_height="27dp"
                android:text="Bogamy"
                android:layout_marginLeft="40dp"
                android:textSize="22dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="27dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"  />


        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:layout_width="144.25dp"
            android:layout_height="76dp"
            android:layout_gravity="end|bottom"
            android:layout_marginLeft="347.25dp"

            android:layout_marginTop="646dp"
            android:layout_marginBottom="37dp"
            android:elevation="1dp"
            android:src="@drawable/group3" />

    </FrameLayout>

</RelativeLayout>